<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Arial, Verdana" color="#343434" />
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-image href="https://wormenkwekerijwasse.nl" align="center" width="200px" src="https://wormenkwekerijwasse.nl/img/logo-wormenkwekerijwasse.png"></mj-image>
        <mj-text>
          <h1>
            Je bestelling bij Wormenkwekerij Wasse
          </h1>
        </mj-text>
        <mj-divider border-color="#343434"></mj-divider>

        <mj-text><a href="https://wormenkwekerijwasse.nl/wanneer-komt-pakket-aan/">Wanneer komt mijn bestelling aan?</a></mj-text>

      </mj-column>
    </mj-section>

    {{> e-books }}

    <mj-section>

  <mj-column>
    <mj-text font-weight="800" padding-bottom="0px">Dit heb je besteld: </mj-text>

    <mj-table cellpadding="6px">
      {{#each order.lines }}
        <tr padding-bottom="0px">
          <td>{{ quantity }} x</td>
          <td>
            {{ productVariant.name }}
          </td>
        </tr>
      {{/each}}

    </mj-table>

    <mj-divider border-color="#343434" border-width="1px"></mj-divider>

    <mj-table cellpadding="6px">
      <tr>
        <td><strong>Totaal incl.</strong></td>
        <td align="right"><strong>â‚¬ {{ formatMoney summary.totalIncVAT }}</strong></td>
      </tr>

    </mj-table>

  </mj-column>
</mj-section>

    {{> invoice }}

    {{> address }}

    <mj-section>
      <mj-column>
        <mj-divider border-color="#343434" border-width="1px"></mj-divider>
        <mj-text>
          Vragen of opmerkingen? Neem contact op via
          <a href="mailto:info@wormenkwekerijwasse.nl">info@wormenkwekerijwasse.nl</a>
        </mj-text>

      </mj-column>
    </mj-section>

  </mj-body>
</mjml>